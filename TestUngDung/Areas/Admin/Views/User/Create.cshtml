@model ModelEF.Model.tbl_admin

@{
    ViewBag.Title = "Thêm mới người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-save">&nbsp; Thêm người dùng</i>
    }

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div class="col-lg-12 form-group">
            <div class="col-md-6">
                @Html.ActionLink("Quay Lại", "Index", "User", new { @class = "btn btn-danger" })
            </div>
        </div>
        <div class="col-lg-12 form-group">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2" for="brand_name">Tên Tài Khoản</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.username, new { @class = "form-control", @placeholder = "Mời nhập tên đăng nhập" })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="brand_name">Mật Khẩu</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.password, new { @class = "form-control", @placeholder = "Mời nhập mật khẩu", @type = "password" })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm" class="btn btn-primary" />
                </div>
            </div>
        </div>
        </div>
}


@model IEnumerable<ModelEF.Model.tbl_admin>

@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
   <i class="fa fa-user">&nbsp; Quản Lý Người Dùng</i> 
    }

@using (Html.BeginForm("Index", "User", FormMethod.Post))
{
    <div class="col-md-6">
        @Html.ActionLink("Tạo mới", "Create", "User", new { @class = "btn btn-primary" })
    </div>
}
<div class="col-lg-12 form-group">
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>STT</th>
                <th>
                    Tên Đăng Nhập
                </th>
                <th>
                    Mật Khẩu
                </th>
                <th>
                    Hành Động
                </th>
            </tr>
        </thead>
        <tbody>
            @{ var i = 1;}
            @foreach (var item in Model)
            {
                <tr id="row_@item.admin_id">
                    <td>
                        @i
                    </td>
                    <td>
                        @item.username
                    </td>
                    <td>
                        @item.password
                    </td>
                    <td>
                        <a href="~/Admin/User/Edit/@item.admin_id"><i class="fa fa-edit"></i></a>
                        <a onclick="PopupDelete(@item.admin_id)">Xóa</a>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>
<script>
    function PopupDelete(id) {
        Swal.fire({
            title: 'Bạn có chắc chắn xóa người dùng này không',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Đồng ý',
            cancelButtonText: 'Hủy',
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    type: "POST",
                    url: "/User/Delete",
                    data: { id: id },
                    success: function (result) {
                        if (result) {
                            Swal.fire(
                                'Thành Công!',
                                'Bạn đã xóa thành công',
                                'success'
                            );
                            $("#row_" + id).remove();
                        }else {
                            Swal.fire(
                                'Thất bại!',
                                'Kiểm tra lại dữ liệu',
                                'error'
                            );
                        }
                    }
                })

            }
        })
    }
</script>
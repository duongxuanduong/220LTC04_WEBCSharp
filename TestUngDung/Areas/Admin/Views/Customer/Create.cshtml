@model ModelEF.Model.tbl_customer
@{
    var customer = (List<ModelEF.Model.tbl_customer>)ViewBag.Customer;
    ViewBag.Title = "Thêm khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-save">&nbsp; Thêm khách hàng</i>
}
@using (Html.BeginForm("Create", "Customer", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="col-lg-12 form-group">
            <div class="col-md-6">
                @Html.ActionLink("Quay Lại", "Index", "Customer", new { @class = "btn btn-danger" })
            </div>
        </div>
        <div class="col-lg-12 form-group">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2" for="brand_name">Tên Khách Hàng</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.customer_name, new { @class = "form-control", @placeholder = "Mời nhập tên " })
                    @Html.ValidationMessageFor(model => model.customer_name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="brand_name">Email</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.customer_email, new { @class = "form-control", @placeholder = "Mời nhập email"})
                    @Html.ValidationMessageFor(model => model.customer_email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="brand_name">Mật khẩu</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.customer_password, new { @class = "form-control", @placeholder = "Mời nhập mật khẩu", @type = "password" })
                    @Html.ValidationMessageFor(model => model.customer_password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="brand_name">Số Điện Thoại</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.customer_phone, new { @class = "form-control", @placeholder = "Mời nhập số điện thoại" })
                    @Html.ValidationMessageFor(model => model.customer_phone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}